include partials/head
include partials/header

doctype html
html
  mixin head('')
  //- body.animated.fadeIn
  body
    div.kud-Wrapper

      mixin header('')

      section.kud-Summary.kud-BeautifyLink.animated.fadeIn

        h2.kud-Summary-heading Articles

        ul.kud-Summary-list

          each post in collections.posts

            li.kud-Summary-listItem
              if post.lang === 'en'
                time.kud-Summary-listItemTime= moment(post.date).locale('en').format('DD MMM YYYY')
                if post.redirectUrl
                  a(href=post.redirectUrl target="_blank").kud-Summary-listItemHeading= '[en] ðŸ“Œ ' + post.title
                else
                  a(href=post.path + '/').kud-Summary-listItemHeading= '[en] ' + post.title

        ul.kud-Summary-list

          each post in collections.posts

            li.kud-Summary-listItem
              if post.lang === 'fr'
                time.kud-Summary-listItemTime= moment(post.date).locale('fr').format('DD MMM YYYY')
                if post.redirectUrl
                  a(href=post.redirectUrl target="_blank").kud-Summary-listItemHeading= '[fr] ðŸ“Œ ' + post.title
                else
                  a(href=post.path + '/').kud-Summary-listItemHeading= '[fr] ' + post.title

      include partials/foot
    include partials/scripts
