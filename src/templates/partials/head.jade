mixin head(title)
  head
    meta(charset='utf-8')
    if title
      title='_kud.diary â€” ' + title
    else
      title='_kud.diary'
    meta(name='description' content='Diary of the _kud')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')

    if title
      meta(property="og:title" content=title)
    else
      meta(property="og:title" content='Diary of the _kud')

    if cover
      meta(property="og:image" content=cover.match(/http/) ? cover : 'http://diary.kud.io' + cover)
