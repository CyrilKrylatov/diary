include partials/head
include partials/header

doctype html
html.post
  +head(title)
  body
    div.kud-Banner
      script
      a(class="kud-Banner-link" href='/' + lang + '/')= trans.banner.title

    div.kud-Wrapper
      section.kud-Post.kud-Text--wowLink.animated.fadeIn

        div.kud-PostHeader
          span.kud-PostHeader-decorator
            img(src=cover).kud-PostHeader-img
          if !onlyCover
            div.kud-PostHeader-overlay
              div.kud-PostHeader-wrapper
                h2.kud-PostHeader-heading
                  a(href='')= title
                time(data-hint=moment(date).locale(lang).fromNow()).kud-PostHeader-date.hint--bottom= moment(date).locale(lang).format('dddd Do MMMM YYYY')

        div.kud-Post-content!= contents

        if !noComments
          div#disqus_thread
          script.
              //- var disqus_config = function () {
              //-   this.page.url = PAGE_URL;
              //-   this.page.identifier = PAGE_IDENTIFIER; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
              //- }

              (function() {
                  var d = document, s = d.createElement('script');
                  s.src = '//kuddiary.disqus.com/embed.js';
                  s.setAttribute('data-timestamp', +new Date());
                  (d.head || d.body).appendChild(s);
              })();
          </script>
          noscript
            p No JavaScript, no comments.

      include partials/footer
    include partials/scripts
