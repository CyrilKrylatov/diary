include partials/head
include partials/header

doctype html
html.posts
  mixin head('')
  body
    div.kud-Wrapper

      mixin header('')

      section.kud-Posts.kud-Text--wowLink.animated.fadeIn
        h2.kud-Posts-heading Articles
        ul.kud-Posts-list

          each post in collections.posts
            li.kud-Posts-listItem
              time(title=moment(post.date).locale(lang).format('Do MMMM YYYY')).kud-Posts-listItemTime= moment(post.date).locale(lang).format('DD MMM YYYY')
              if post.redirectUrl
                a(href=post.redirectUrl target="_blank" title=post.title).kud-Posts-listItemHeading= 'â¤¤ ' + post.title
              else
                a(href=post.path + '/' title=post.title).kud-Posts-listItemHeading= post.title

      include partials/footer
    include partials/scripts
